<!--comienza modal preguntarIntervaloConsumo -->
<div id="preguntarIntervaloConsumo" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 id="tituloModal" class="modal-title text-center">Consultar consumo por periodo</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

      <div class="container-fluid text-center">
          <div class="modal-body">
      	  	<label for="fecha">Desde:
      		  <input type="text" id="fechaDesde" value="" />
      		  </label>

        	   <label for="fecha">Hasta:
        		 <input type="text" id="fechaHasta" value="" />
        		 </label>
          </div>
      </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">
                Cerrar
            </button>
            <button type="submit" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" onclick="mostrarConsumoPorPeriodo('{{alias}}')">
                Consultar
            </button>
        </div>

    </div>
