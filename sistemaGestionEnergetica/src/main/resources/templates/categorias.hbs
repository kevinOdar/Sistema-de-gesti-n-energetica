{{#partial "contenido"}}
<div class="text-center">
	<h4>Categor√≠as de consumo</h4>
	<p></p>
</div>
<div class="mx-auto" style="width: 350px;">
	<table class="table table-responsive table-hover mx-auto table-sm">
		<thead class="thead-dark">
			<tr>
			<th scope="col"class="align-middle text-center">Nombre</th>
			<th></th>
			<th></th>
			<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each categorias}}
				<tr>
					<td scope="row" class="align-middle">{{nombre}}
					</td>
					<td scope="row" class="align-middle">
						<button type="button" class="btn btn-info btn-sm" onclick="categoriaDetalle('{{id}}')">
							Ver
						</button>
						<button type="button" class="btn btn-secondary btn-sm" onclick="categoriaDetalle('{{id}}', true)">
							Modificar
						</button>
						<button type="button" class="btn btn-danger btn-sm" onclick="categoriaEliminar('{{id}}')">
							Eliminar
						</button>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>
<div class="text-center">
		<p></p>
		<button type="button" class="btn btn-success" onclick="categoriaNueva()">Nueva categoria</button>
</div>

<script type="text/javascript" src="/js/commons.js"></script>
<script type="text/javascript" src="/js/categorias.js"></script>
{{/partial}}
